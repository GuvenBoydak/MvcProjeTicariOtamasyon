@model SalesMovementVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<table id="tbl1" class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th> Ürün</th>
            <th> Müşteri</th>
            <th> Personel</th>
            <th> Adet</th>
            <th> Fiyat</th>
            <th> Toplam</th>
            <th> Tarih</th>
            <th> Güncelle</th>
            <th> Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @{int index = 0; }
        @foreach (SalesMovement item in Model.SalesMovements)
        {
            <tr>
                <td>@{index++;} @index</td>
                <td>@item.Product.Name</td>
                <td>@item.Customer.FirstName @item.Customer.LastName</td>
                <td>@item.Employee.FirstName @item.Employee.LastName</td>
                <td>@item.Quantity</td>
                <td>@item.Price ₺</td>
                <td>@item.TotalPrice ₺</td>
                <td>@item.CreatedDate.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Güncelle", "UpdateSalesMovement", new { id = item.ID }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Detaylar", "DetailSalesMovement", new { id = item.ID }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>

</table>
@Html.ActionLink("Yeni Satış Ekle", "AddSalesMovement", null, new { @class = "btn btn-info", style = "background-color:yellowgreen"  })



