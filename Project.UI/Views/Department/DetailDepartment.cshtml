@model DepartmentVM
@{
    ViewBag.Title = "DetailDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı= @ViewBag.departmentName</li>
</ol>

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Personel Adı Soyadı</th>
        <th>Satışlar</th>
    </tr>
    <tbody>
        @{int index = 0; }
        @foreach (Employee item in Model.Employees)
        {
            <tr>
                <td>@{index++;} @index</td>
                <td>@item.FirstName @item.LastName</td>
                <td>
                    @Html.ActionLink("Satışlar", "DepartmentEployeeSales", new {id=item.ID },new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>
