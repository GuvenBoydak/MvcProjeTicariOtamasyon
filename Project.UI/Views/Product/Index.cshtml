@model ProductVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyati</th>
        <th>Satış Fiyati</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th colspan="2">İşlemler</th>
    </tr>
    <tbody>
        @foreach (Product item in Model.Products)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Brand</td>
                <td>@item.Stock</td>
                <td>@item.BuyPrice</td>
                <td>@item.SellPrice</td>
                @if (item.Category == null)
                {
                    <td>Kategorisi yok</td>
                }
                else
                {
                    <td>@item.Category.CategoryName</td>
                }
                <td>@item.ProductImage</td>
                <td>
                    @Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>

</table>
@Html.ActionLink("Yeni Ürün Ekle", "AddProduct")



