@model CustomerVM
@{
    ViewBag.Title = "ShippingTracking";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<h2>Sipariş Takip Sayfası</h2>
<br />

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Takip Kodu</th>
        <th>Açıklama</th>
        <th>Tarih</th>
    </tr>
    <tbody>
     
        @{int index = 0;}
        @foreach (ShippingTracking item in Model.ShippingTrackings)
        {

            <tr>
                <td>@{index++;} @index</td>
                <td>@item.TrackingCode</td>
                <td>@item.Description</td>
                <td>@Convert.ToDateTime(@item.CreatedDate).ToString("dd-MM-yyyy")</td>
            </tr>
        }
    </tbody>
</table>


