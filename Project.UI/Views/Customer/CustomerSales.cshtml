@model CustomerVM
@{
    ViewBag.Title = "CustomerSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adi= @ViewBag.Customer</li>
</ol>

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat ₺</th>
        <th>Adet</th>
        <th>Toplam ₺</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    <tbody>
        @{int index = 0;}
        @foreach (SalesMovement item in Model.SalesMovements)
        {
            <tr>
            <td>@{index++;} @index </td>
            <td>@item.Product.Name</td>
            <td>@item.Employee.FirstName @item.Employee.LastName</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice</td>
            <td>@item.CreatedDate.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Yazdır", "DepartmentEployeeSales", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
    </tbody>

</table>


