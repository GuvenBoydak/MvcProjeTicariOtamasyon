@model DepartmentVM

@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Departman Ekleme Sayfası</h2>
<br />

@using (Html.BeginForm())
{
    @Html.Label("Departman Adı");
    @Html.TextBoxFor(x => x.Department.Name, new { @class = "form-control" });
    @Html.ValidationMessage("Name", "", new { @style = "color:red" });
    <br />

    <button class="btn btn-danger" style="background-color:yellowgreen">Kaydet</button>
}


