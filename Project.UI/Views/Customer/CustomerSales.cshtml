@model CustomerVM
@{
    ViewBag.Title = "CustomerSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adi= @ViewBag.Customer</li>
</ol>

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    <tbody>
        @foreach (SalesMovement item in Model.SalesMovements)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Product.Name</td>
                <td>@item.Employee.FirstName @item.Employee.LastName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice</td>
                <td>@item.Date</td>
                <td>
                    @Html.ActionLink("Yazdır", "DepartmentEployeeSales", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>


