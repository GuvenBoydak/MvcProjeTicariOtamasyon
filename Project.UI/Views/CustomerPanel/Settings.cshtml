@model CustomerVM
@using (Html.BeginForm("UpdateCustomerPanel","CustomerPanel",FormMethod.Post))
{
    <form class="form-horizontal">
        @Html.HiddenFor(x => x.Customer.ID)
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Customer.FirstName, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Customer.LastName, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">E-Mail</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Customer.Email, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Customer.City, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Customer.Password, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"><a href="#">Şifre Degiştirme Şartlarını Kabul Ediyorum.</a>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Güncelle</button>
            </div>
        </div>
    </form>

}
