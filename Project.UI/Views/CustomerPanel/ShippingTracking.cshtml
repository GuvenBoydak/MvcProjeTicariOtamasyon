@model CustomerVM
@{
    ViewBag.Title = "ShippingTracking";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<h2>ShippingTracking</h2>
<br />
@using (Html.BeginForm("ShippingTracking", "CustomerPanel", FormMethod.Post))
{
    <p>
        Kargo Takip Kodu:@Html.TextBox("a")
        <input type="submit" value="Ara" />
    </p>
}



<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Takip Kodu</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>
    <tbody>

        @{int index = 0;}
        @foreach (ShippingDetail item in Model.ShippingDetails)
        {

            <tr>
                <td>@{index++;} @index</td>
                <td>@item.Sender</td>
                <td>@item.TrackingCode</td>
                <td>@item.Description</td>
                <td>@Convert.ToDateTime(@item.CreatedDate).ToString("dd-MM-yyyy")</td>
                <td>
                    @Html.ActionLink("Detaylar", "ShippingDetail", new { id = item.TrackingCode }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>


