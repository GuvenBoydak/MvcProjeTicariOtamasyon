@model InvoiceVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Faturalar</h2>

<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Seri No</th>
            <th>Sıra No</th>
            <th>Vergi Dairesi</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Teslim Eden</th>
            <th>Teslim Alan</th>
            <th>Toplam</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Invoice item in Model.Invoices)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.SerialNo</td>
                <td>@item.InvoiceNumber</td>
                <td>@item.TaxAuthorityNumber</td>
                <td>@item.CreatedDate</td>
                <td>@item.Time</td>
                <td>@item.Submitter</td>
                <td>@item.Receiver</td>
                <td>@item.TotalPrice</td>
                <td>@Html.ActionLink("Güncelle", "UpdateInvoice", new {id=item.ID },new {@class="btn btn-danger" })</td>
                <td>@Html.ActionLink("Detaylar", "DetailsInvoice", new {id=item.ID },new {@class="btn btn-info" })</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Fatura Ekle","AddInvoice",null,new {@class="btn btn-warning" })
