@using PagedList
@using PagedList.Mvc
@model ProductVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<table class="table table-hover">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyati</th>
        <th>Satış Fiyati</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    <tbody>
        @foreach (Product item in Model.ProductsPaged)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Brand</td>
                <td>@item.Stock</td>
                <td>@item.BuyPrice ₺</td>
                <td>@item.SellPrice ₺</td>
                @if (item.Category == null)
                {
                    <td>Kategorisi yok</td>
                }
                else
                {
                    <td>@item.Category.CategoryName</td>
                }
                <td>
                    @Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Detay", "Index","ProductDetail", new { id = item.ID }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>

</table>
@Html.PagedListPager((IPagedList)Model.ProductsPaged, paged => Url.Action("Index", new { paged }))
@Html.ActionLink("Yeni Ürün Ekle", "AddProduct")



