@model DepartmentVM
@{
    ViewBag.Title = "DetailDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>DetailDepartment</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adi= @ViewBag.departmentName</li>
</ol>

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Personel Adi</th>
        <th>Personel Soyadi</th>
        <th>Personel Gorsel</th>
        <th>Personel Satıslari</th>
        <th colspan="1" style="text-align:center;">İşlemler</th>
    </tr>
    <tbody>
        @foreach (Employee item in Model.Employees)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Image</td>
                <td>
                    @Html.ActionLink("Satislar", "DepartmentEployeeSales", new {id=item.ID },new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>
